<!-- res/drawable/square_button.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Yellow background for the button -->
    <solid android:color="#FFA500" /> <!-- Yellow color -->

    <!-- Optional border (can be removed if not needed) -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF" /> <!-- White border -->

    <!-- Set the size of the button to be square -->
    <size
        android:width="100dp"
        android:height="100dp" />
</shape>
